---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import TimeStamp from '../components/TimeStamp.astro';
---

<Layout title="flashybolt">
	<Navbar />
	<main class="mx-auto w-full max-w-3xl mb-16">
		<h1 class="text-6xl font-bold">flashybolt</h1>
		<p class="mt-3 text-gray-600 dark:text-gray-400 text-lg">Software developer.</p>
		<div class="grid grid-flow-col w-24 mt-3 text-lg">
			<a href="https://github.com/flashybolt" target="_blank" class="transition duration-300 ease-in-out w-12 h-7 rounded-lg flex items-center">
				<i id="icon" class="fa-brands fa-github fa-w-16 dark:hover:text-teal-200 hover:text-teal-800 rounded-lg flex items-center justify-center"></i>
			</a>
			<a href="https://dsc.bio/flashybolt" target="_blank" class="transition duration-300 ease-in-out w-12 h-7 rounded-lg flex items-center">
				<i id="icon" class="fa-brands fa-discord fa-w-16 dark:hover:text-teal-200 hover:text-teal-800 rounded-lg flex items-center justify-center"></i>
			</a>
		</div>
		<TimeStamp />
	</main>
</Layout>

